<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/whiteColorForText"
    tools:context=".NewOrderActivity">
    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp">
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:textSize="16dp"
                android:text="Customer name"
                android:textColor="@color/textDark"/>
        </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:textStyle="bold"
                    android:background="@drawable/et_background"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="textPersonName"
                    android:id="@+id/etCustName"
                    android:textSize="20dp"
                    android:maxLength="20"
                    android:textColor="@color/textDark"
                    android:fontFamily="@font/open_sans_semibold"
                    android:paddingLeft="5dp" />
            </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:gravity="left"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingRight="8dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Room Lenght"
                    android:textSize="16sp"
                    android:paddingBottom="5dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/textDark"
                    />

                <EditText
                    android:id="@+id/etRoomL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_background"
                    android:fontFamily="@font/open_sans_semibold"
                    android:hint="m"
                    android:maxLength="4"
                    android:inputType="numberDecimal"
                    android:digits="0123456789."
                    android:padding="5dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/textDark"
                    android:textSize="20sp" />
            </LinearLayout>
            <LinearLayout
                android:gravity="end"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingLeft="8dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Room Width"
                    android:paddingBottom="5dp"
                    android:textSize="16sp"
                    android:layout_gravity="left"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/textDark"
                    />

                <EditText
                    android:id="@+id/etRoomW"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_background"
                    android:fontFamily="@font/open_sans_semibold"
                    android:hint="m"
                    android:maxLength="4"
                    android:inputType="numberDecimal"
                    android:digits="0123456789."
                    android:padding="5dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/textDark"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <TextView
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:textSize="16dp"
            android:paddingBottom="5dp"
            android:text="Select material"
            android:textColor="@color/textDark"/>
    </LinearLayout>
    </LinearLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:scrollbars="none"
        android:layout_marginBottom="5dp"
        android:id="@+id/scroll_view">
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/radio_group">
                <RadioButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:background="@drawable/change_button_state"
                    android:text="Tiles"
                    android:textAllCaps="false"
                    android:button="@drawable/change_button_state"
                    android:textAlignment="center"
                    android:onClick="checkButton"
                    android:elevation="3dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@drawable/change_text_state"
                    android:drawableTop="@drawable/change_icon_state"
                    android:textSize="13sp"/>
                <RadioButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:elevation="3dp"
                    android:button="@drawable/change_button_state"
                    android:textAlignment="center"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/change_button_state"
                    android:text="Wood"
                    android:textAllCaps="false"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@drawable/change_text_state"
                    android:drawableTop="@drawable/change_icon_state_two"
                    android:onClick="checkButton"
                    android:textSize="13sp"/>

            <RadioButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/change_button_state"
                android:button="@drawable/change_button_state"
                android:drawableTop="@drawable/change_icon_state_three"
                android:elevation="3dp"
                android:fontFamily="@font/open_sans_semibold"
                android:onClick="checkButton"
                android:padding="10dp"
                android:text="Carpet"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@drawable/change_text_state"
                android:textSize="13sp" />
                <RadioButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:elevation="3dp"
                    android:button="@drawable/change_button_state"
                    android:textAlignment="center"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/change_button_state"
                    android:text="Laminate"
                    android:textAllCaps="false"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@drawable/change_text_state"
                    android:drawableTop="@drawable/change_icon_state_three"
                    android:onClick="checkButton"
                    android:textSize="13sp"/>
            <RadioButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:elevation="3dp"
                android:button="@drawable/change_button_state"
                android:textAlignment="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/change_button_state"
                android:text="Vinyl"
                android:textAllCaps="false"
                android:fontFamily="@font/open_sans_semibold"
                android:textColor="@drawable/change_text_state"
                android:drawableTop="@drawable/change_icon_state_three"
                android:onClick="checkButton"
                android:textSize="13sp"/>
                <RadioButton
                    android:id="@+id/btn_add_material"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:elevation="3dp"
                    android:button="@drawable/change_button_state"
                    android:textAlignment="center"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/change_button_state"
                    android:text="Add"
                    android:onClick="checkButton"
                    android:textAllCaps="false"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@drawable/change_text_state"
                    android:drawableTop="@drawable/change_icon_state_four"
                    android:textSize="18sp"/>
        </RadioGroup>
    </HorizontalScrollView>
    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:gravity="left"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingRight="8dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cost of material"
                    android:textSize="16sp"
                    android:paddingBottom="5dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/textDark"
                    />

                <EditText
                    android:id="@+id/etMaterialCost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_background"
                    android:fontFamily="@font/open_sans_semibold"
                    android:hint="£"
                    android:inputType="numberDecimal"
                    android:digits="0123456789."
                    android:padding="5dp"
                    android:maxLength="4"
                    android:paddingTop="10dp"
                    android:textColor="@color/textDark"
                    android:textSize="20sp" />
            </LinearLayout>
            <LinearLayout
                android:gravity="end"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingLeft="8dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Include VAT?"
                    android:paddingBottom="5dp"
                    android:textSize="16sp"
                    android:layout_gravity="left"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/textDark"
                    />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchVat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/SwitchCompatTheme"
                    android:background="@drawable/et_background"
                    android:fontFamily="@font/open_sans_semibold"
                    android:hint="20%"
                    android:padding="5dp"
                    android:checked="false"
                    android:paddingTop="10dp"
                    android:textColor="@color/textDark"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp">
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:textSize="16dp"
                android:text="Order due date"
                android:textColor="@color/textDark"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:textStyle="bold"
                android:background="@drawable/et_background"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/etOrderDueDate"
                android:textSize="20dp"
                android:inputType="date"
                android:focusableInTouchMode="false"
                android:textColor="@color/textDark"
                android:fontFamily="@font/open_sans_semibold"
                android:paddingLeft="5dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:id="@+id/bg_summary"
        android:layout_centerHorizontal="true"
        android:background="@drawable/et_background"
        android:layout_marginTop="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Room area:"
                        android:fontFamily="@font/open_sans"
                        android:textSize="14dp"
                        android:textColor="@color/mainTextDarkGrey"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VAT:"
                        android:fontFamily="@font/open_sans"
                        android:textColor="@color/mainTextDarkGrey" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Summary:"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textColor="@color/textDark" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical|end">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|end"
                    android:paddingRight="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvTotalRoomArea"
                        android:maxLength="7"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textSize="16dp"
                        android:textColor="@color/mainTextDarkGrey"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|end"
                    android:paddingRight="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvVat"
                        android:maxLength="7"
                        android:fontFamily="@font/open_sans"
                        android:textColor="@color/mainTextDarkGrey"
                        android:paddingLeft="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|end"
                    android:paddingRight="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvTotal"
                        android:maxLength="7"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/open_sans_semibold"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/btnUpdateOrder"
                android:text="Submit an Order"
                android:background="@drawable/buttons_shape"
                android:textAllCaps="false"
                android:textColor="@color/whiteColorForText"
                android:fontFamily="@font/open_sans_semibold"
                android:textSize="16dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone"
        android:id="@+id/tvSubTotal"/>
</LinearLayout>