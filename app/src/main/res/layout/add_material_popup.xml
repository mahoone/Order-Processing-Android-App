<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="450dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/pop_bg"
    tools:context=".AddMaterial">
    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="X"
        android:layout_gravity="end"
        android:gravity="center"
        android:textSize="15dp"
        android:id="@+id/tv_exit_popup"
        android:layout_margin="5dp"
        android:background="@drawable/et_background"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="25dp">
            <TextView
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textSize="16dp"
                android:paddingBottom="15dp"
                android:text="Add Floor Type"
                android:textColor="@color/textDark"/>
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textSize="16dp"
                android:text="Enter type of floor and price."
                android:textColor="@color/textDark"/>
        </LinearLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:orientation="horizontal"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:paddingBottom="25dp"
            android:layout_gravity="center"
            app:errorEnabled="true"
            app:counterEnabled="true"
            app:counterMaxLength="8"
            android:id="@+id/til_material_name">
            <com.google.android.material.textfield.TextInputEditText
                android:textStyle="bold"
                android:background="@drawable/et_background"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:id="@+id/etMaterialName"
                android:textSize="16dp"
                android:hint="Type of Floor"
                android:textColor="@color/textDark"
                android:fontFamily="@font/open_sans_semibold"
                android:paddingLeft="5dp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:orientation="horizontal"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:paddingBottom="25dp"
            android:layout_gravity="center"
            app:errorEnabled="true"
            app:counterEnabled="true"
            app:counterMaxLength="4"
            android:id="@+id/til_material_price">
            <com.google.android.material.textfield.TextInputEditText
                android:textStyle="bold"
                android:background="@drawable/et_background"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="numberDecimal"
                android:id="@+id/etMaterialPrice"
                android:textSize="16dp"
                android:hint="Price in Â£"
                android:textColor="@color/textDark"
                android:fontFamily="@font/open_sans_semibold"
                android:paddingLeft="5dp" />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="Add Floor Type"
            android:id="@+id/btn_new_material"
            android:layout_gravity="center"
            android:background="@drawable/buttons_shape"
            android:textAllCaps="false"
            android:onClick="confirmInput"
            android:textColor="@color/whiteColorForText"
            android:fontFamily="@font/open_sans_semibold"
            android:textSize="16dp"/>
    </LinearLayout>
</LinearLayout>